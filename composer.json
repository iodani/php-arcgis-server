{
  "name": "iodani/php-arcgis-server",
  "description": "Self-hosted ArcGIS Feature Server implementation in PHP for serving PostGIS/PostgreSQL data to ArcGIS JS SDK without ESRI subscription",
  "type": "library",
  "keywords": [
    "arcgis",
    "postgis",
    "gis",
    "esri",
    "feature-server",
    "spatial",
    "geospatial",
    "mapping"
  ],
  "homepage": "https://github.com/iodani/php-arcgis-server",
  "license": "MIT",
  "authors": [
    {
      "name": "Iodani Batista PÃ©rez",
      "email": "iodani.batistaperez@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-pdo": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpstan/phpstan": "^1.0",
    "phpstan/phpstan-strict-rules": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Iodani\\ArcGIS\\Server\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Iodani\\ArcGIS\\Server\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage",
    "cs": "php-cs-fixer fix --dry-run --diff",
    "cs:fix": "php-cs-fixer fix",
    "stan": "phpstan analyse src --level=8",
    "quality": [
      "@cs",
      "@stan",
      "@test"
    ]
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}